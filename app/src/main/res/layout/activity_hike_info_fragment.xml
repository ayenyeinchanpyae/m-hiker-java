<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="match_parent"
        android:padding="32dp"
        tools:context=".ListUserActivity"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/hikeNameLabel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike Name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeName"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike Name name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hikeNameLabel"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/hikeLocationLabel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike Location"
                app:layout_constraintTop_toBottomOf="@+id/hikeNameLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeLocation"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike Location"
                app:layout_constraintStart_toStartOf="@id/hikeName"
                app:layout_constraintTop_toBottomOf="@+id/hikeName" />

            <TextView
                android:id="@+id/hikeDateLabel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike Date"
                app:layout_constraintTop_toBottomOf="@+id/hikeLocationLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeDate"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike Date"
                app:layout_constraintStart_toStartOf="@id/hikeLocation"
                app:layout_constraintTop_toBottomOf="@+id/hikeLocation" />

            <TextView
                android:id="@+id/hikeParkingLabel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Parking Available"
                app:layout_constraintTop_toBottomOf="@+id/hikeDateLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeParking"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Yes"
                app:layout_constraintStart_toStartOf="@id/hikeDate"
                app:layout_constraintTop_toBottomOf="@+id/hikeDate" />

            <TextView
                android:id="@+id/hikeLengthLabel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike Length"
                app:layout_constraintTop_toBottomOf="@+id/hikeParkingLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeLength"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Hike length"
                app:layout_constraintStart_toStartOf="@id/hikeParking"
                app:layout_constraintTop_toBottomOf="@+id/hikeParking" />

            <TextView
                android:id="@+id/hikeDifficulityLabel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Difficulity Level"
                app:layout_constraintTop_toBottomOf="@+id/hikeLengthLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeDifficulity"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Easy"
                app:layout_constraintStart_toStartOf="@id/hikeLength"
                app:layout_constraintTop_toBottomOf="@+id/hikeLength" />

            <TextView
                android:id="@+id/hikeDescriptionLabel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Description"
                app:layout_constraintTop_toBottomOf="@+id/hikeDifficulityLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeDescription"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="blah blah"
                app:layout_constraintStart_toStartOf="@id/hikeDifficulity"
                app:layout_constraintTop_toBottomOf="@+id/hikeDifficulity" />

            <TextView
                android:id="@+id/hikeTrailConditionLabel"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Trail condition"
                app:layout_constraintTop_toBottomOf="@+id/hikeDescription"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeTrailCondition"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="muddy"
                app:layout_constraintStart_toStartOf="@id/hikeDescription"
                app:layout_constraintTop_toBottomOf="@+id/hikeDescription" />

            <TextView
                android:id="@+id/hikeRecommendedGearLabel"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Gear"
                app:layout_constraintTop_toBottomOf="@+id/hikeTrailConditionLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeRecommendedGear"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="gear"
                app:layout_constraintStart_toStartOf="@id/hikeTrailCondition"
                app:layout_constraintTop_toBottomOf="@+id/hikeTrailCondition" />

            <TextView
                android:id="@+id/hikeEmmergencyContactLabel"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Emmergency Contact"
                app:layout_constraintTop_toBottomOf="@+id/hikeRecommendedGearLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hikeEmmergencyContact"
                android:layout_width="215dp"
                android:layout_height="50dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="222"
                app:layout_constraintStart_toStartOf="@id/hikeRecommendedGear"
                app:layout_constraintTop_toBottomOf="@+id/hikeRecommendedGear" />

            <ImageButton
                android:id="@+id/hikeEditBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/q_edit"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toStartOf="@id/hikeEmmergencyContact"
                app:layout_constraintTop_toBottomOf="@+id/hikeEmmergencyContact"/>

            <ImageButton
                android:id="@+id/hikeDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/q_delete"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toStartOf="@id/hikeEditBtn"
                app:layout_constraintTop_toBottomOf="@+id/hikeEditBtn"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>